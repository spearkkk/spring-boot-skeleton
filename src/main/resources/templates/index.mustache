{{>layout/header}}
<h1>
  Hello, dude!!
</h1>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
    </div>
  </div>
  <br>

  <table class="table table-horizontal table-bordered">
    <thead class="thread-strong">
    <tr>
      <th>No.</th>
      <th>Title</th>
      <th>Author</th>
      <th>Last Modified</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}
      <tr>
        <td>{{id}}</td>
        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
        <td>{{author}}</td>
        <td>{{modifiedDatetime}}</td>
      </tr>
    {{/posts }}
    </tbody>
  </table>

</div>
{{>layout/footer}}